{
    "name": "handballgoalkeeper/asset-maintenance-module-be",
    "type": "project",
    "description": "RestAPI backend application for asset maintenance module developed as addon for IT-FAMS.",
    "keywords": [
        "RestAPI",
        "Backend",
        "Module",
        "Assets",
        "Asset maintenace"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.26.2",
        "laravel/tinker": "^2.10.1",
        "ext-pdo": "*"
    },
    "require-dev": {
        "fakerphp/faker": "^v1.24.1",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.24.0",
        "laravel/sail": "^1.41.0",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.2",
        "pestphp/pest": "^4.0.3",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "larastan/larastan": "^3.4.2",
        "peckphp/peck": "^0.1.3",
        "rector/rector": "^2.0.18"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "lint": [
            "pint"
        ],
        "refactor": "rector",
        "test:typos": "peck",
        "test:lint": [
            "pint --test"
        ],
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:typos",
            "@test:lint",
            "@test:types",
            "@test:refactor"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
